<div class="row">
  <h1><%= controller.action_name %></h1>
  <p class="text-right">
    <%= number_with_delimiter(@response.count) %> records
    (<%= @execute_time %> sec)
  </p>
  <% if @response.count > 0 %>
    <table>
      <thead>
        <tr>
          <th>Data</th>
        </tr>
      </thead>
      <tbody>
        <% @response.items.each do |item| %>
          <tr>
            <td><%= item %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No data.</p>
  <% end %>
</div>
